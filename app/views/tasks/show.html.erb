<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <%= link_to 'Edit this task', edit_task_path %>
  <%= link_to 'Delete this task',
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>

  <%= link_to 'Back to the list', tasks_path %>
</div>
